server {
  include snippets/{{ item.service_name|d(item.name) }}_listen;

  server_name
    {% if item.www_subdomain|d(false) %}www.{% endif %}{{ item.name }}
    {% for alt in item.alternatives|d([]) %}
      {% if alt.www_subdomain|d(false) %}www.{% endif %}{{ alt.name }}
    {% endfor %}
  ;

  {% for location in item.locations|d([]) %}
    location {{ location.path }} {
      {% if location.proxy|d(false) %}
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass {{ location.proxy.pass }};
      {% endif %}
    }
  {% endfor %}

  root /usr/local/www/{{ item.name }};
}

{% if item.www_subdomain|d(false) or item.alternatives|d([])|anywithattr('www_subdomain') %}
  ## redirect missing www.

  server {
    include snippets/{{ item.service_name|d(item.name) }}_listen;

    server_name
      {% if item.www_subdomain|d(false) %}{{ item.name }}{% endif %}
      {% for alt in item.alternatives|d([])|selectattr('www_subdomain', 'defined')|selectattr('www_subdomain') %}
        {{ alt.name }}
      {% endfor %}
    ;

    return 301 $scheme://www.$host$request_uri;
  }
{% endif %}
